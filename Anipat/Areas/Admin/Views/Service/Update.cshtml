@model Anipat.Models.Service
@{
    Layout = "_AdminLayout";
}

<h2 class="header-title mb-4">✨ Xidməti Redaktə Et: <span class="text-dark">@Model.Title</span></h2>

<div class="card card-cici shadow-sm border-0 p-4">
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label class="font-weight-bold">Xidmət Adı</label>
            <input asp-for="Title" class="form-control" style="border-radius: 12px;" />
        </div>

        <div class="form-group mb-3">
            <label class="font-weight-bold">İkon Yolu</label>
            <input asp-for="IconPath" class="form-control" style="border-radius: 12px;" />
        </div>

        <div class="form-group mb-3">
            <label class="font-weight-bold">Təsvir</label>
            <textarea asp-for="Description" class="form-control" rows="4" style="border-radius: 12px;"></textarea>
        </div>

        <div class="form-check mb-4">
            <input asp-for="IsActive" class="form-check-input" type="checkbox">
            <label class="form-check-label">Aktiv</label>
        </div>

        <div class="d-flex">
            <button type="submit" class="btn btn-success btn-cici mr-2">Dəyişikliyi Yadda Saxla</button>
            <a asp-action="Index" class="btn btn-light btn-cici text-muted">Geri Qayıt</a>
        </div>
    </form>
</div>