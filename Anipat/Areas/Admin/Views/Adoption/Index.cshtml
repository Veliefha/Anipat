@using Anipat.Models.Enums
@model IEnumerable<Anipat.Models.Appointment>

<div class="container-fluid py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="m-0"><i class="fas fa-calendar-check me-2"></i>Randevu İdarəetmə Paneli</h4>
            <span class="badge bg-light text-primary">Cəmi: @Model.Count()</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">İstifadəçi</th>
                            <th>Tarix</th>
                            <th>Saat</th>
                            <th>Məqsəd</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-3 bg-secondary text-white rounded-circle p-2">
                                            <i class="fas fa-user"></i>
                                        </div>
                                        <div>@item.AppUser.UserName</div>
                                    </div>
                                </td>
                                <td><i class="far fa-calendar-alt me-1"></i> @item.AppointmentDate.ToShortDateString()</td>
                                <td><i class="far fa-clock me-1"></i> @item.TimeSlot</td>
                                <td class="text-truncate" style="max-width: 200px;">@item.Subject</td>
                                <td>
                                    @if (item.Status == AdoptionStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Gözləyir</span>
                                    }
                                    else if (item.Status == AdoptionStatus.Approved)
                                    {

                                        <span class="badge bg-success">Təsdiqləndi</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-danger">Rədd edildi</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (item.Status == AdoptionStatus.Pending)
                                    {
                                        <form asp-action="ChangeStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@AdoptionStatus.Approved" />
                                            <button type="submit" class="btn btn-sm btn-success rounded-pill px-3">Təsdiqlə</button>
                                        </form>
                                        <form asp-action="ChangeStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="hidden" name="status" value="@AdoptionStatus.Rejected" />
                                            <button type="submit" class="btn btn-sm btn-danger rounded-pill px-3">Rədd et</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>