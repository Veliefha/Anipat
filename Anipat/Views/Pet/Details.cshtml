@using Anipat.Models
@model Pet

@{
    ViewData["Title"] = Model.Name + " - Detallar";
}

<div class="container my-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <strong>Uğurlu!</strong> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <strong>Xəta!</strong> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="card shadow-lg border-0 overflow-hidden" style="border-radius: 20px;">
        <div class="row g-0">
            <div class="col-md-6">
                <img src="~/img/pets/@Model.ImageUrl"
                     class="img-fluid h-100 w-100"
                     alt="@Model.Name"
                     style="object-fit: cover; min-height: 450px;"
                     onerror="this.src='/img/no-image.png'">
            </div>

            <div class="col-md-6 d-flex align-items-center">
                <div class="card-body p-lg-5 p-4">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Ana Səhifə</a></li>
                            <li class="breadcrumb-item active">@Model.Name</li>
                        </ol>
                    </nav>

                    <h1 class="display-4 fw-bold text-primary mb-3">🐾 @Model.Name</h1>

                    <div class="d-flex flex-wrap gap-2 mb-4">
                        <span class="badge bg-info text-dark px-3 py-2">🎂 Yaş: @Model.Age</span>
                        <span class="badge bg-warning text-dark px-3 py-2">🐕 Cins: @Model.Breed</span>
                        <span class="badge bg-success text-white px-3 py-2">📍 Şəhər: @Model.City</span>
                    </div>

                    <h5 class="fw-bold mt-4">Haqqında:</h5>
                    <p class="lead text-muted mb-5">
                        @(string.IsNullOrEmpty(Model.Description) ? "Bu dostumuz haqqında hələlik ətraflı məlumat qeyd edilməyib." : Model.Description)
                    </p>

                    <div class="d-grid gap-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Adoption" asp-action="SendRequest" method="post">
                                @* petId mütləq burda olmalıdır *@
                                <input type="hidden" name="petId" value="@Model.Id" />
                                <button type="submit" class="btn btn-warning btn-lg w-100 py-3 fw-bold shadow-sm text-dark" style="border-radius: 50px; transition: 0.3s;">
                                    Məni Sahiblən 🏠
                                </button>
                            </form>
                            <div class="mt-3 text-center">
                                <p class="small text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Müraciətlərinizin statusunu görmək istəyirsiniz?
                                    <a asp-controller="Adoption" asp-action="MyRequests" class="text-primary fw-bold text-decoration-none border-bottom border-primary">
                                        Müraciətlərimə bax
                                    </a>
                                </p>
                            </div>
                        }
                        else
                        {
                            <a asp-area="Admin" asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg w-100 py-3 fw-bold" style="border-radius: 50px;">
                                Sahiblənmək üçün giriş edin
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Mesajların 5 saniyə sonra avtomatik itməsi üçün (istəyə bağlı)
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}