@using Anipat.Models
@using Microsoft.AspNetCore.Identity
@using Anipat.DAL
@inject UserManager<AppUser> UserManager
@inject AppDbContext _context

@{
    // Giriş etmiş istifadəçi üçün bildirişləri hazırlayırıq
    var userEmail = User.Identity.IsAuthenticated ? User.Identity.Name : null;
    var notifications = !string.IsNullOrEmpty(userEmail)
        ? _context.ContactMessages.Where(m => m.Email == userEmail && !string.IsNullOrEmpty(m.AdminReply)).OrderByDescending(m => m.Id).Take(5).ToList()
        : new List<ContactMessage>();
}

<!doctype html>
<html class="no-js" lang="az">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Anipat - Ev Heyvanları Mərkəzi</title>
    <meta name="description" content="Ev heyvanları üçün peşəkar xidmətlər">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/gijgo.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/slicknav.css">
    <link rel="stylesheet" href="~/css/style.css">

    <style>
        /* Sənin mövcud CSS-lərin */
        .main-header-area {
            padding: 10px 0 !important;
        }

        .sticky-header.sticky {
            padding: 5px 0 !important;
            background: rgba(255, 255, 255, 0.95) !important;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .main-menu ul li {
            margin-right: 20px !important;
        }

            .main-menu ul li a {
                padding: 10px 0 !important;
                font-size: 15px !important;
            }

        .user-avatar {
            width: 24px;
            height: 24px;
            font-size: 11px;
        }

        .user-name-text {
            font-size: 14px;
        }

        .nav-link.text-dark {
            padding: 0 !important;
            display: inline-block !important;
        }

        .sticky-header.sticky .logo img {
            max-width: 100px;
            transition: 0.3s;
        }

        /* YENİ: Bildiriş Zəngi üçün stillər */
        .notif-badge {
            position: absolute;
            top: -5px;
            right: -10px;
            background: #ee5253;
            color: white;
            font-size: 9px;
            padding: 2px 5px;
            border-radius: 50%;
            font-weight: bold;
        }

        .notif-dropdown {
            width: 280px !important;
            border-radius: 10px !important;
            border: none !important;
            box-shadow: 0 5px 25px rgba(0,0,0,0.15) !important;
        }

        .notif-item {
            border-bottom: 1px solid #eee;
            padding: 10px;
            font-size: 13px;
        }

            .notif-item:last-child {
                border-bottom: none;
            }
    </style>
</head>

<body>

    <header>
        <div class="header-area">
            <div class="header-top_area">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-md-8">
                            <div class="short_contact_list">
                                <ul>
                                    <li><a href="#">+994 50 123 45 67</a></li>
                                    <li><a href="#">B.e – Şənbə 10:00 – 19:00</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-4">
                            <div class="social_media_links">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-instagram"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                                <a href="#"><i class="fa fa-youtube"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="sticky-header" class="main-header-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-3 col-lg-3">
                            <div class="logo">
                                <a asp-controller="Home" asp-action="Index">
                                    <img src="~/img/logo.png" alt="Anipat">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-9 col-lg-9">
                            <div class="main-menu d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a asp-controller="Home" asp-action="Index">Ana Səhifə</a></li>
                                        <li><a href="#">Haqqımızda</a></li>
                                        <li><a href="#">Xidmətlər</a></li>
                                        <li><a href="#">Komanda</a></li>
                                        <li><a asp-controller="Contact" asp-action="Index">Əlaqə</a></li>

                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li class="nav-item dropdown">
                                                <a href="#" class="position-relative" data-toggle="dropdown">
                                                    <i class="fa fa-bell text-primary"></i>
                                                    @if (notifications.Any())
                                                    {
                                                        <span class="notif-badge">@notifications.Count</span>
                                                    }
                                                </a>
                                                <ul class="dropdown-menu notif-dropdown dropdown-menu-right">
                                                    <li class="dropdown-header">Bildirişlər</li>
                                                    @if (notifications.Any())
                                                    {
                                                        @foreach (var n in notifications)
                                                        {
                                                            <li class="notif-item">
                                                                <small class="text-primary font-weight-bold">Admin Cavabı:</small><br />
                                                                <span class="text-dark">@n.AdminReply</span>
                                                            </li>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <li class="notif-item text-center">Yeni bildiriş yoxdur</li>
                                                    }
                                                </ul>
                                            </li>

                                            <li>
                                                <a asp-controller="Appointment" asp-action="MyAppointments">
                                                    <i class="fa fa-calendar-check-o text-primary"></i> Randevularım
                                                </a>
                                            </li>

                                            var user = await UserManager.GetUserAsync(User);
                                            var firstName = user?.FirstName ?? "User";

                                            <li>
                                                <a href="#">
                                                    <span class="user-avatar">@firstName.Substring(0, 1).ToUpper()</span>
                                                    <span class="user-name-text">@firstName</span>
                                                    <i class="ti-angle-down"></i>
                                                </a>
                                                <ul class="submenu">
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a></li>
                                                    }
                                                    <li><a asp-controller="Contact" asp-action="MyMessages">Mesajlarım</a></li>
                                                    <li><a asp-area="Admin" asp-controller="Account" asp-action="Logout" class="logout-link">Çıxış</a></li>
                                                </ul>
                                            </li>
                                        }
                                        else
                                        {
                                            <li><a asp-area="Admin" asp-controller="Account" asp-action="Login" class="login-btn-custom">Giriş</a></li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="footer">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">Bizimlə Əlaqə</h3>
                            <ul class="address_line">
                                <li>+994 50 123 45 67</li>
                                <li><a href="#">info@anipat.az</a></li>
                                <li>Bakı şəhəri, Azərbaycan</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">Xidmətlərimiz</h3>
                            <ul class="links">
                                <li><a href="#">Sahiblənmə</a></li>
                                <li><a href="#">Müayinə</a></li>
                                <li><a href="#">Məsləhət</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">Sürətli Keçid</h3>
                            <ul class="links">
                                <li><a href="#">Haqqımızda</a></li>
                                <li><a href="#">Məxfilik Siyasəti</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <div class="footer_logo">
                                <a href="#"><img src="~/img/logo.png" alt="Anipat"></a>
                            </div>
                            <p class="address_text">Bakı şəhəri, Nizami küçəsi 25</p>
                            <div class="socail_links">
                                <ul>
                                    <li><a href="#"><i class="ti-facebook"></i></a></li>
                                    <li><a href="#"><i class="ti-instagram"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy-right_text">
            <div class="container">
                <div class="bordered_1px"></div>
                <div class="row">
                    <div class="col-xl-12">
                        <p class="copy_right text-center">
                            © <script>document.write(new Date().getFullYear());</script> Anipat
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/ajax-form.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.min.js"></script>
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/scrollIt.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/nice-select.min.js"></script>
    <script src="~/js/jquery.slicknav.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/gijgo.min.js"></script>
    <script src="~/js/contact.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>