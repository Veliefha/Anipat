@using Anipat.Models.Enums
@model IEnumerable<Anipat.Models.Appointment>

<div class="container my-5 py-5">
    <div class="card shadow-sm border-0" style="border-radius: 20px;">
        <div class="card-header bg-white py-3">
            <h3 class="mb-0 text-primary font-weight-bold">📅 Mənim Randevu Müraciətlərim</h3>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0">Tarix</th>
                            <th class="border-0">Saat</th>
                            <th class="border-0">Məqsəd</th>
                            <th class="border-0 text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-3 font-weight-bold">@item.AppointmentDate.ToShortDateString()</td>
                                <td class="py-3 text-primary">@item.TimeSlot</td>
                                <td class="py-3 text-muted">@item.Subject</td>
                                <td class="py-3 text-center">
                                    @if (item.Status == AdoptionStatus.Pending)
                                    {
                                        <span class="badge badge-warning px-3 py-2 text-dark">Gözləyir</span>
                                    }
                                    else if (item.Status == AdoptionStatus.Approved)
                                    {
                                        <span class="badge badge-success px-3 py-2">Təsdiqləndi</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger px-3 py-2">Rədd edildi</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>