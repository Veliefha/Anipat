@model List<Anipat.Models.Service>
@{
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="header-title">🐾 Xidmətlərin Siyahısı</h2>
    <a href="/Admin/Service/Create" class="btn btn-success btn-cici shadow-sm">
        <i class="fas fa-plus"></i> Yeni Xidmət Əlavə Et
    </a>
</div>

<div class="card card-cici shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover mb-0" style="border-radius: 20px; overflow: hidden;">
            <thead class="bg-light">
                <tr>
                    <th class="border-0 p-3">İkon</th>
                    <th class="border-0 p-3">Başlıq</th>
                    <th class="border-0 p-3">Təsvir</th>
                    <th class="border-0 p-3">Status</th>
                    <th class="border-0 p-3 text-center">Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="p-3">
                            <img src="~/img/service/@item.IconPath" style="width: 40px; height: 40px; object-fit: cover; border-radius: 8px;" />
                        </td>
                        <td class="p-3 font-weight-bold">@item.Title</td>
                        <td class="p-3 text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                        <td class="p-3">
                            @if (item.IsActive)
                            {
                                <span class="badge badge-pill badge-success p-2">Aktiv</span>
                            }
                            else
                            {
                                <span class="badge badge-pill badge-danger p-2">Deaktiv</span>
                            }
                        </td>
                        <td class="p-3 text-center">
                            <a href="/Admin/Service/Update/@item.Id" class="btn btn-sm btn-info rounded-circle">
                                <i class="fas fa-edit text-white"></i>
                            </a>
                            <a href="/Admin/Service/Delete/@item.Id" class="btn btn-sm btn-danger rounded-circle shadow-sm" title="Sil" onclick="return confirm('Bu xidməti silmək istədiyinizə əminsiniz?')">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>