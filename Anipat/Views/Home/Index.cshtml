<script>
    document.addEventListener("DOMContentLoaded", function () {
        const counters = document.querySelectorAll('.counter');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                // Əgər statistika bölməsi ekranda görünürsə
                if (entry.isIntersecting) {
                    const el = entry.target;
                    const target = +el.getAttribute('data-target');
                    const increment = target / 100; // Sürəti burdan tənzimləyə bilərsən

                    const updateCount = () => {
                        const current = +el.innerText;
                        if (current < target) {
                            el.innerText = Math.ceil(current + increment);
                            setTimeout(updateCount, 20); // Artım sürəti
                        } else {
                            el.innerText = target;
                        }
                    };
                    updateCount();
                    // Animasiya bir dəfə olsun deyə izləməni dayandırırıq
                    observer.unobserve(el);
                }
            });
        }, { threshold: 0.5 }); // Bölmənin yarısı görünəndə başla

        counters.forEach(count => observer.observe(count));
    });
</script>