@using Anipat.DAL
@inject AppDbContext _context
@{
    // Yeni mesaj sayını bazadan real-vaxt rejimində çəkirik
    var newMsgCount = _context.ContactMessages.Count(m => !m.IsRead);
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Anipat Admin - Sevimli Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <style>
        /* Səhifənin tam hündürlükdə olması üçün */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* Flexbox ilə sidebar və main-content-i bağlayırıq */
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
            align-items: stretch;
        }

        .sidebar {
            background: linear-gradient(180deg, #ff9f43 0%, #ee5253 100%);
            width: 250px;
            min-width: 250px;
            border-radius: 0 30px 30px 0;
            z-index: 100;
            position: sticky;
            top: 0;
            height: 100vh;
        }

            .sidebar .nav-link {
                color: white;
                font-weight: 500;
                margin: 10px;
                border-radius: 10px;
                transition: 0.3s;
            }

                .sidebar .nav-link:hover {
                    background: rgba(255,255,255,0.2);
                    transform: translateX(5px);
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                }

        .main-content {
            flex-grow: 1;
            padding: 30px;
            background-color: #f8f9fa;
            overflow-y: auto;
        }

        /* Cədvəllərdə uzun mesajların alt-alta düşməsi üçün */
        .text-wrap-custom {
            white-space: normal !important;
            word-wrap: break-word;
            max-width: 300px;
            line-height: 1.5;
        }

        .card-cici {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
        }

        /* Sayğac (Badge) üçün stil */
        .msg-badge {
            background-color: white;
            color: #ee5253;
            font-weight: bold;
            border-radius: 50%;
            padding: 2px 8px;
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <div class="admin-wrapper">
        <nav class="sidebar shadow">
            <div class="sidebar-sticky">
                <div class="text-center py-4">
                    <img src="~/img/logo.png" alt="logo" style="max-width: 120px; filter: brightness(0) invert(1);">
                    <p class="text-white mt-2 small">Pet Care Admin</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Dashboard"><i class="fas fa-paw"></i> Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Service"><i class="fas fa-concierge-bell"></i> Xidmətlər</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Pet"><i class="fas fa-dog"></i> Heyvanlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Team"><i class="fas fa-users"></i> Komanda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Appointment" asp-action="Index">
                            <i class="fas fa-fw fa-calendar"></i>
                            <span>Randevular</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link d-flex justify-content-between align-items-center" asp-area="Admin" asp-controller="Contact" asp-action="Index">
                            <span><i class="fas fa-envelope"></i> Mesajlar</span>
                            @if (newMsgCount > 0)
                            {
                                <span class="msg-badge shadow-sm">@newMsgCount</span>
                            }
                        </a>
                    </li>

                    <hr class="bg-white mx-3">
                    <li class="nav-item">
                        <a class="nav-link" href="/" target="_blank"><i class="fas fa-external-link-alt"></i> Sayta Bax</a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>